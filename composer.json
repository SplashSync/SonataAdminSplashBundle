{
    "name":                 "splash/sonata-admin-splash-bundle",
    "license":              "MIT",
    "type":                 "symfony-bundle",
    "description":          "This Bundle provides a Object Manager for Splash Connectors and Sonata Admin.",
    "keywords":             ["Symfony3", "Symfony4", "splalh", "sync", "connectors", "synchronization", "sonata", "sonata-project", "admin", "explorer"],
    "minimum-stability":    "dev",
    "prefer-stable":        true,

    "authors": [
        {
            "name":"Splash Sync",
            "email":"contact@splashsync.com"
        },
        {
            "name": "Bernard Paquier",
            "email": "eshop.bpaquier@gmail.com"
        }
    ],

    "require": {
        "php":                          "^7.2",
        
        "symfony/cache":                "^4.0",
        "psr/simple-cache":             "^1.0",

        "doctrine/doctrine-bundle":     "^1.12",
        "doctrine/orm":                 "^2.7",

        "sonata-project/admin-bundle":  "^3.100",
        "sonata-project/doctrine-orm-admin-bundle": ">=3.0",

        "twig/twig":                    "^2.0",
        "twig/extensions":              "^1.5",
        
        "burgov/key-value-form-bundle": "@stable",
        
        "splash/php-bundle":            "dev-master",
        "splash/widgets-bundle":        "dev-master",
        "splash/console":               "dev-master"
    },
    
    "require-dev": {
        "badpixxel/php-sdk":            "dev-main"
    },
    
    "autoload": {
        "psr-4": {
            "Splash\\Admin\\": "src/"
        }
    },
    
    "autoload-dev": {
        "psr-4": {
            "Splash\\Admin\\Tests\\": "tests/"
        }        
    }
}
