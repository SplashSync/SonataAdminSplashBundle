{
    "name":                 "splash/sonata-admin",
    "license":              "MIT",
    "type":                 "symfony-bundle",
    "description":          "This Bundle provides a Object Manager for Splash Connectors and Sonata Admin.",
    "keywords":             ["Symfony",  "Splash", "Splash Sync", "connectors", "synchronization", "sonata", "sonata-project", "admin", "explorer"],
    "minimum-stability":    "dev",
    "prefer-stable":        true,

    "authors": [
        {
            "name":         "Splash Sync",
            "email":        "contact@splashsync.com"
        },
        {
            "name":         "Bernard Paquier",
            "email":        "eshop.bpaquier@gmail.com"
        }
    ],

    "require": {
        "php":                                          "^8.1",
        
        "symfony/cache":                                "^5.4",
        "symfony/twig-bundle":                          "^5.4",

        "doctrine/doctrine-bundle":                     "^2.6",
        "doctrine/orm":                                 "^2.7",

        "sonata-project/admin-bundle":                  "^4.0",
        "sonata-project/doctrine-orm-admin-bundle":     "^4.0",

        "twig/twig":                                    "^3.0",
        "twig/extra-bundle":                            "^3.0",
        "twig/intl-extra":                              "^3.0",

        "burgov/key-value-form-bundle":                 "@stable",
        
        "splash/php-bundle":                            "dev-master",

        "badpixxel/widgets-bundle":                     "3.0.x-dev"
    },
    
    "require-dev": {
        "badpixxel/php-sdk":                            "^2.0",
        "splash/toolkit":                               "3.0.x-dev"
    },
    
    "autoload": {
        "psr-4": {
            "Splash\\Admin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Splash\\Admin\\Test\\": "tests/"
        }
    },

    "config": {
        "allow-plugins": {
            "phpro/grumphp": true,
            "symfony/runtime": true,
            "phpro/grumphp-shim": false
        }
    },

    "scripts": {
        "auto-scripts": [
            "php bin/console cache:clear",
            "php bin/console assets:install --relative",
            "php bin/console doctrine:schema:update --force --complete --no-interaction --no-debug"
        ],
        "post-install-cmd": [
            "@auto-scripts",
            "php bin/console sonata:user:create Toolkit toolkit@splashsync.com toolkit --super-admin || exit 0"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },


    "extra": {
        "public-dir": "tests/public"
    }
}
