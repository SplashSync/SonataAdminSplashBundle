
<div class="box box-primary">
    <div class="box-body ">
        <div class="info-box">

            <span class="info-box-icon bg-default">
                <img src="{{ asset(profile.ico | default('bundles/splash/splash-ico.png')) }}" class="img-responsive">                            
            </span>

            <div class="info-box-content">

                <span class="info-box-text">
                    Connector Definition
                </span>

                <div class="progress">
                    <div class="progress-bar" style="width: 0%"></div>
                </div>
                <span class="progress-description">

                    <table class="table table-bordered table-striped table-hover sonata-ba-list">
                        <tbody>
                            <tr>
                                <td>Title</td>
                                <td>{{ profile.label | default('No Connector Label Defined') }}</td>
                            </tr>
                            <tr>
                                <td>Name</td>
                                <td>{{ profile.name | default('?') }}</td>
                            </tr>
                            <tr>
                                <td>Type</td>
                                <td>{{ profile.type | default('?') }}</td>
                            </tr>
                            <tr>
                                <td>Service</td>
                                <td>{{ profile.connector | default('?') }}</td>
                            </tr>
                            <tr>
                                <td>Url</td>
                                <td>
                                    <a class="sonata-action-element" href="http://{{ profile.url | default('www.splashsync.com') }}">
                                        <i class="fa fa-external-link" aria-hidden="true"></i>
                                        {{ profile.url | default('www.splashsync.com') }}
                                    </a>                                        
                                </td>
                            </tr>
                            <tr>
                                <td>Enabled</td>
                                <td>
                                    {% if profile.enables | default(true) %}
                                        <i class="fa fa-check-circle text-success" aria-hidden="true">&nbsp;Yes</i>
                                    {% else %}
                                        <i class="fa fa-times-circle text-danger" aria-hidden="true">&nbsp;No</i>
                                    {% endif %}                                        
                                </td>
                            </tr>
                        </tbody>
                    </table>                                

                </span>
            </div><!-- /.info-box-content -->
        </div>
                                
        <div class="info-box">

            <span class="info-box-icon bg-orange-active">
                <i class="fa fa-cogs text-default" aria-hidden="true"></i>                          
            </span>

            <div class="info-box-content">

                <span class="info-box-text">
                    WebService Configuration
                </span>

                <div class="progress">
                    <div class="progress-bar" style="width: 0%"></div>
                </div>
                <span class="progress-description">

                    <table class="table table-bordered table-striped table-hover sonata-ba-list">
                        <tbody>
                            <tr>
                                <td>Id</td>
                                <td>{{ config.WsIdentifier | default('?') }}</td>
                            </tr>
                            <tr>
                                <td>Key</td>
                                <td>{{ config.WsEncryptionKey | default('?') }}</td>
                            </tr>
                            <tr>
                                <td>Host</td>
                                <td>{{ config.WsHost | default('?') }}</td>
                            </tr>
                            <tr>
                                <td>Method</td>
                                <td>{{ config.WsMethod | default('?') }}</td>
                            </tr>
                        </tbody>
                    </table>                                

                </span>
            </div><!-- /.info-box-content -->
        </div>                                
    </div>
</div>